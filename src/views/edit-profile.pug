extends base

block content
  img(src=loggedInUser.avatarUrl, alt="avatar_image", width="100", height="100")
  if errorMessage
    span=errorMessage
  form(method="POST", enctype="multipart/form-data")
    label(for="avatar") Avatar
    input(type="file", id="avatar", name="avatar", accept="image/*")
    input(name="name", placeholder="Name", type="text", required, value=user.name)
    input(name="email", placeholder="Email", type="email", required, value=user.email, disabled)
    input(name="username", placeholder="Username", type="text", required, value=user.username)
    input(name="location", placeholder="Location", type="text", required, value=user.location)
    input(type="submit", value="Edit")
  if !loggedInUser.socialOnly
    hr
    a(href="change-password") Change Password &rarr;
