extends base

block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(name="currentPassword", placeholder="Current Password", required, type="password")
    input(name="newPassword", placeholder="New Password", required, type="password")
    input(name="newPasswordConfirm", placeholder="Confirm New Password", required, type="password")
    input(type="submit", value="Change Password")